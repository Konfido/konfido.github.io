.blog-post-comments
  margin-top: 4rem

#vcomments
  --waline-avatar-size: 2.2rem
  --waline-border: 1px solid #333
  --waline-bgcolor: none
  .vlogin
    margin-top: 8px
    .vlogin-btn
      text-align: center
      font-size: 10px

  .vpanel
    border: 0
    .vheader
      padding: 0
      border: 0
      border-radius: 4px
    .vheader-item
      height: 34px
      label
        border: 1px solid rgba(87, 87, 87, .9)
        border-top-left-radius: 4px
        border-right: 0
        border-bottom-left-radius: 4px
        background-color: rgba(87,87,87,.3)
        padding-right: 10px
        padding-left: 10px
        padding-top: 6px
        weight: 190px
      .vinput
        border: 1px solid rgba(87, 87, 87, .9)
        border-top-right-radius: 4px
        border-bottom-right-radius: 4px
    .vheader-item:nth-child(-n+2)
      padding-right: 10px

    .veditor
      border: 1px solid rgba(87, 87, 87, .9)
      border-radius: 4px
      margin: 0
      padding: 6px
      margin-top: 10px
    .vfooter
      margin: 0